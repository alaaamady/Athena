<section>
  <form action="/notes" method="POST">
    <textarea name = "title" placeholder = "Title"></textarea>
    <textarea name = "content" placeholder = "Content"></textarea>
    <input type="submit" value="Take Note!">
  </form>
</section>


<% @notes.each do |note| %>
  <article>
    <h2>
      <%= note.title%>
    </h2>
    <p>
      <%=note.content%>
      <span><a href="/notes/<%= note.id%>">[edit]</a></span>
      <span><a href="/<%= note.id%>">[archive]</a></span>
      <span><a href="/notes/delete/<%= note.id%>">[delete]</a></span>
    </p>
    <p class="meta">Created: <%= note.created_at %></p>
  </article>
<% end %>